//Sum of n natural Numbers
using System;
namespace hi;
class Program
{
    static int Sum(int a)
    {
        //return a * (a + 1) / 2;
        int s = 0;
        for (int i = 0; i <= a; i++)
        {
            s = s+ i;
        }
        return s;
    }
    static void Main()
    {
        Console.WriteLine("Enter Limit:");
        int limit = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Sum of {0} natural numbers is: {1}",limit,Sum(limit));
    }
}
